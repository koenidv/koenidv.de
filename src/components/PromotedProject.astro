---
import { CollectionEntry } from "astro:content";
import ProjectCard from "./ProjectCard.astro";
import ProjectDialog from "./ProjectDialog.astro";

export interface Props {
	project: CollectionEntry<"projects">,
	isLarge?: boolean
}

const { project, isLarge } = Astro.props;
const data = project.data;
const { Content, headings } = await project.render();
---

<ProjectCard
	title={data.title}
	description={data.longDescription || data.description}
	image={data.image || ""}
	tags={data.tags}
	slug={project.slug}
	isLarge={isLarge == true}
/>
<ProjectDialog title={data.title} image={data.image} slug={project.slug}>
	<Content />
</ProjectDialog>
